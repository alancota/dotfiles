# Created on 10/07/2023

# Variables used to export path only
custom_paths=(
    /usr/local/opt/mysql-client/bin
    $HOME/.yarn/bin
    $HOME/.config/yarn/global/node_modules/.bin
)

CUSTOM_PATH=""
for path in "${custom_paths[@]}"; do
    CUSTOM_PATH+=$CHSTOM_PATH:$path
done

# All my custom environment variables
# Homebrew bin
export HOMEBREW_BIN=/opt/homebrew/bin

# Go path
export GOPATH=$HOME/go

# iCloud
export ICLOUD=$HOME/Library/Mobile\ Documents/com\~apple\~CloudDocs

# Homebrew backup scripts
export HOMEBREW_BACKUP=$ICLOUD/.config/homebrew

# mackup location
export MACKUP_LOCATION=$ICLOUD/.config/mackup

# Others
export PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
export PUPPETEER_EXECUTABLE_PATH="/opt/homebrew/bin/chromium"

# ################################################
#   Export desired custom variables to the PATH  #
# ################################################
export PATH=$PATH:$HOMEBREW_BACKUP:$HOMEBREW_BIN:$GOPATH
#export PATH=$PATH:$$CUSTOM_PATH
